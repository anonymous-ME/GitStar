<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anonymousme.gitstar.Activities.Login"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:text="Git Star uses Github Token to access Github API. Your token will be saved in LocalStorage. So don't worry."

                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/token"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Github Token" />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:text="Submit Github Token"
                android:textStyle="bold"
                android:textColor="#fff"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="login"
                android:layout_margin="5dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Github Token"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="sign_up"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
